<div id="smoke-bkg" class="fixed top-0 h-full w-full -z-10"></div>

<script>
  import * as THREE from 'three'

  const $bkg = document.querySelector('#smoke-bkg')

  let w = window.innerWidth
  let h = window.innerHeight

  //inicializar Three.js
  // 3 cosas bÃ¡sicas: escena, camera y renderer

  // escena ðŸ–¼
  const scene = new THREE.Scene()

  const light = new THREE.DirectionalLight(0xffffff, 0.5)
  light.position.set(0, 0, 1)
  
  scene.add(light)
  // camera ðŸ“·
  // 75 -> grados de inclinaciÃ³n
  const camera = new THREE.PerspectiveCamera(75, w / h, 0.1, 1000)
  camera.position.z = 10

  scene.add(camera)

  // renderer ðŸ–Œ
  const renderer = new THREE.WebGLRenderer()
  renderer.setSize(w, h)
  // color de fondo
  renderer.setClearColor(0x333333, 1)
  $bkg?.appendChild(renderer.domElement)

  renderer.render(scene, camera)

  const smokeParticles: THREE.Mesh[] = []
  const loader = new THREE.TextureLoader()

  loader.crossOrigin = ''
  loader.load('https://s3-us-west-2.amazonaws.com/s.cdpn.io/95637/Smoke-Element.png', (texture) => {
    // crear plano 300x300
  const smokeGeo = new THREE.PlaneGeometry(300, 300)

  // crear material de textura
  const smokeMaterial = new THREE.MeshLambertMaterial({
      map: texture,
      transparent: true,
      opacity: 0.5,
    })
    
  const NUM_OF_PARTICLES = 300
  for (let i = 0; i < NUM_OF_PARTICLES; i++) {
    // crear malla con geometria y material
    const particle = new THREE.Mesh(smokeGeo, smokeMaterial)
    // posicionar aleatoriamente
    particle.position.set(
      Math.random() * 500 - 250,
      Math.random() * 500 - 250,
      Math.random() * 1000 - 100
    );
    particle.rotation.z = Math.random() * 360;
    scene.add(particle)
    smokeParticles.push(particle)

  }
  })

  function resize () {
    const w = window.innerWidth
    const h = window.innerHeight
    renderer.setSize(w, h)
    camera.aspect = w / h
    camera.updateProjectionMatrix() // actualizar la matriz de proyecciÃ³n siempre que cambia el tamaÃ±o de la ventana
  }

  function animate() {
    requestAnimationFrame(animate)

    smokeParticles.forEach((particle) => {
      particle.rotation.z += 0.002
      particle.position.x += Math.random() * 0.1 - 0.05
      particle.position.y += Math.random() * 0.1 - 0.05
      particle.position.z += Math.random() * 0.1 - 0.05
    })

    renderer.render(scene, camera)
  }
  animate()

  window.addEventListener('resize', resize)
</script>